<Page x:Class="darker.Views.SettingsGeneral"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.modernwpf.com/2019"
      xmlns:local="clr-namespace:darker.Views"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      xmlns:res="clr-namespace:darker.Properties"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingsGeneral"
      Loaded="OnLoad">
    <Grid>
        <StackPanel Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left">
            <GroupBox Header="{x:Static res:Resources.AppSetHeader}">
                <ui:SimpleStackPanel>
                <ui:ToggleSwitch x:Name="AutoStartToggle" Header="{x:Static res:Resources.AutoSButton}" Toggled="AutoStart_Toggled"/>
                <ui:ToggleSwitch x:Name="AutoUpdateToggle" Header="{x:Static res:Resources.AutoUButton}" Toggled="AutoUpdate_Toggled" />
            </ui:SimpleStackPanel>
            </GroupBox>
            <GroupBox Header="Behavior">
                <ui:SimpleStackPanel>
                    <ComboBox Width="200" ui:ControlHelper.Header="{x:Static res:Resources.BehaveHeader}" ui:ControlHelper.PlaceholderText="Choose your mode" SelectionChanged="IconSwitchMode_SelectionChanged">
                        <sys:String>Both</sys:String>
                        <sys:String>Only system</sys:String>
                        <sys:String>Only apps</sys:String>
                    </ComboBox>
                    <!--<RadioButton x:Name="Both" GroupName="ThemeModeSel" Checked="Both_OnChecked"
                         Content="{x:Static res:Resources.ChangeBothRadio}" />
            <RadioButton x:Name="SysOnly" GroupName="ThemeModeSel" Checked="SysOnly_OnChecked"
                         Content="{x:Static res:Resources.ChangeOnlySRadio}" />
            <RadioButton x:Name="AppsOnly" GroupName="ThemeModeSel" Checked="AppsOnly_OnChecked"
                         Content="{x:Static res:Resources.ChangeOnlyARadio}" />-->
                </ui:SimpleStackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</Page>
