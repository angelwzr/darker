<ui:ContentDialog
    xmlns:ui="http://schemas.modernwpf.com/2019"
        x:Class="darker.Viewes.SettingsSchedulerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    
        Title="Set up a schedule"
        PrimaryButtonText="Save"
        CloseButtonText="Cancel"
        DefaultButton="Primary">

    <ui:SimpleStackPanel Spacing="12" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <TextBlock Text="Here you can set automatic theme switching on desired time. Please note that darker should be running in that desired time for this function to work properly."
            TextWrapping="Wrap" FontSize="15"/>
        <ui:SimpleTimePicker x:Name="TimePickerLight" Header="Switch to the light theme on:" SelectedDateTimeChanged="TimePickerLight_SelectedDateTimeChanged" />
        <ui:SimpleTimePicker x:Name="TimePickerDark" Header="Switch to the dark theme on:" SelectedDateTimeChanged="TimePickerDark_SelectedDateTimeChanged" />
        <Label x:Name="TestControl" Content="Selected time"/>
    </ui:SimpleStackPanel>

</ui:ContentDialog>