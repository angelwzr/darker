<Window x:Class="darker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:res="clr-namespace:darker.Properties"
        xmlns:local="clr-namespace:darker"
        mc:Ignorable="d"
        Title="{x:Static res:Resources.AppName}"
        Visibility="Hidden">
    <Grid>
      <tb:TaskbarIcon
      x:Name="darkerIcon"
      ToolTipText="{x:Static res:Resources.AppName}" 
      IconSource="pack://application:,,,/Resources/day_w.ico"
      Visibility="Visible"
      TrayLeftMouseDown="ThemeCycle">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu x:Uid="ContextMenu">
                    <MenuItem x:Uid="SettingsButton" Header="{x:Static res:Resources.SettingsButton}" Click="Settings_Click"/>
                    <MenuItem x:Uid="AboutButton" Header="{x:Static res:Resources.AboutButton}" Click="About_Click"/>
                    <Separator/>
                    <MenuItem x:Uid="ExitButton" Header="{x:Static res:Resources.ExitButton}" FontWeight="Bold" Click="Exit_Click"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
      </tb:TaskbarIcon>
    </Grid>
</Window>