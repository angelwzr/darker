<Window x:Class="darker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tb="http://www.hardcodet.net/taskbar" 
        xmlns:local="clr-namespace:darker"
        mc:Ignorable="d"
        Title="darker"
        Visibility="Hidden">
    <Grid>
        <tb:TaskbarIcon
      x:Name="MyNotifyIcon"
      ToolTipText="darker" 
      IconSource="pack://application:,,,/Resources/day_w.ico"
      Visibility="Visible"
      TrayLeftMouseDown="ThemeCycle">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem x:Name="AutoS" Header="Run at startup" IsCheckable="true" Checked="AutoS_Checked" Unchecked="AutoS_Unchecked"/>
                    <MenuItem Header="Theme settings" Click="Settings_Click"/>
                    <MenuItem Header="About" Click="About_Click"/>
                    <Separator/>
                    <MenuItem Header="Exit" FontWeight="Bold" Click="Exit_Click"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </Grid>
</Window>